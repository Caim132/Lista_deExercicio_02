class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

    def falar(self):
        print(f"{self.nome} diz: Olá!")

# Exemplo de uso da classe Pessoa
pessoa1 = Pessoa("Alice", 30)
pessoa2 = Pessoa("Bob", 25)

pessoa1.falar()  # Saída: Alice diz: Olá!
pessoa2.falar()  # Saída: Bob diz: Olá!
